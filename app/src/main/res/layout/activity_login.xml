<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context="newsongs.fr.newsongs.FirstUseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|fill_vertical|fill_horizontal|center"
            android:text="Bienvenue sur New Songs"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInvite"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Je commence en tant qu'invitÃ©" />

        <Button
            android:id="@+id/btnConnecte"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Je me connecte" />
    </LinearLayout>

</LinearLayout>
